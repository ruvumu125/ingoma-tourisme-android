<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:tools="http://schemas.androidly.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:id="@+id/lytStickyHeader"
    android:tag="layout/view_hrs_sticky_header_0"
    android:background="@color/white"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    app:cardCornerRadius="0dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <View
            android:background="@color/divider_grey"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/vMarker"
            android:background="@drawable/bg_bookmark_indicator"
            android:layout_width="4dp"
            android:layout_height="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textColor="@color/dark"
            android:ellipsize="end"
            android:id="@+id/txtSticky"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:maxLines="1"
            android:includeFontPadding="false"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tvChangeRoom"
            app:layout_constraintLeft_toRightOf="@+id/vMarker"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            style="@style/TextStyles.Label.Medium.w3"/>
        <TextView
            android:textColor="@color/red_highlighted"
            android:id="@+id/tvChangeRoom"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/tvAccommodatesMaxGuests"
            app:layout_constraintLeft_toLeftOf="@+id/txtSticky"
            app:layout_constraintTop_toBottomOf="@+id/txtSticky"
            app:layout_constraintVertical_chainStyle="packed"
            style="@style/TextStyles.Label.Small.w1"/>
        <TextView
            android:textColor="@color/brownishGrey"
            android:id="@+id/tvAccommodatesMaxGuests"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="0"
            app:layout_constraintLeft_toLeftOf="@+id/txtSticky"
            app:layout_constraintTop_toBottomOf="@+id/tvChangeRoom"
            app:layout_constraintVertical_chainStyle="packed"
            style="@style/TextStyles.Label.Small.w1"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
