<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tools2="http://schemas.android.com/tools"
    android:tag="layout/activity_h_detail_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/htab_appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/htl_dtl_toolbar_height"
        android:background="@android:color/white"
        android:elevation="6dp"
        android:theme="@style/Theme.Goibibo.Toolbar"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetStartWithNavigation="0dp"
        app:titleTextColor="@color/toolbarCustomTitleColor"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lytParentToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/htl_dtl_toolbar_height">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/loppppp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Back Arrow Icon (Vertically Centered) -->
                    <ImageView
                        android:id="@+id/toolbar_navigation_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_back_arrow"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <!-- Vertical LinearLayout for Title and Subtitle -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/toolbar_navigation_icon"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="16dp">

                        <!-- Title Text -->
                        <TextView
                            android:id="@+id/toolbar_custom_title"
                            android:textColor="@color/black"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="Toolbar Title"
                            style="@style/TextStyles.Label.Large.w3"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinateLayout"
        android:background="#f4f4f4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/detailFooterView"
        app:layout_constraintTop_toBottomOf="@+id/htab_appbar">

        <!--debut contenu-->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/lytShimmerScrollV"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--debut hotel infos-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/combo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:padding="16dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <!-- Room Image and Details Layout -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <!-- Room Image -->
                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/htl_property_card_image_width1"
                                    android:layout_height="@dimen/htl_property_card_image_width1"
                                    android:layout_marginEnd="16dp"
                                    app:cardCornerRadius="@dimen/radius_small"
                                    app:cardBackgroundColor="@android:color/white">

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <androidx.appcompat.widget.AppCompatImageView
                                            android:id="@+id/imageView"
                                            android:layout_width="@dimen/htl_property_card_image_height"
                                            android:layout_height="@dimen/htl_property_card_image_height"
                                            android:layout_marginBottom="20dp"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/bbbb"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"/>
                                    </androidx.constraintlayout.widget.ConstraintLayout>


                                </androidx.cardview.widget.CardView>

                                <!-- Room Details (Guest Count, Bed Type, Room Surface) -->
                                <LinearLayout
                                    android:translationY="0dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <!-- Number of Guests -->
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical"
                                        android:paddingBottom="8dp">

                                        <LinearLayout
                                            android:paddingLeft="3dp"
                                            android:paddingTop="2dp"
                                            android:paddingRight="5dp"
                                            android:paddingBottom="2dp"
                                            android:id="@+id/property_type"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/bg_srp_tag">
                                            <TextView
                                                android:textColor="#717171"
                                                android:gravity="center"
                                                android:text="@string/app_name"
                                                android:id="@+id/like5starTitle"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="2dp"
                                                style="@style/TextStyles.Label.Small.w1"/>
                                        </LinearLayout>

                                    </LinearLayout>

                                    <!-- Bed Type -->
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical"
                                        android:paddingBottom="8dp">

                                        <TextView
                                            android:textColor="#222222"
                                            android:ellipsize="end"
                                            android:gravity="top|left|center_vertical|center_horizontal|center|start"
                                            android:id="@+id/txtHotelName"
                                            android:text="@string/amenities"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:maxLines="2"
                                            android:includeFontPadding="false"
                                            style="@style/TextStyles.Label.Medium.w3"/>
                                    </LinearLayout>

                                    <!-- Room Surface -->
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical"
                                        android:paddingBottom="8dp">

                                        <TextView
                                            android:textColor="#717171"
                                            android:ellipsize="end"
                                            android:gravity="top|left|center_vertical|center_horizontal|center|start"
                                            android:id="@+id/txtAddress"
                                            android:text="Bujumbura , Burundi,Gitega, Dimanche"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:maxLines="2"
                                            android:includeFontPadding="false"
                                            style="@style/TextStyles.Label.Base.w1"/>
                                    </LinearLayout>

                                    <!-- Room Details -->
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical">

                                        <TextView
                                            android:textColor="@color/black"
                                            android:gravity="center_horizontal"
                                            android:id="@+id/rating"
                                            android:text="3/5"
                                            android:background="@drawable/hotel_average_rating_bg"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:includeFontPadding="false"
                                            android:paddingHorizontal="4dp"
                                            style="@style/TextStyles.Label.Small.w1"/>

                                        <TextView
                                            android:id="@+id/tv_guest_count"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:text="25 Ratings"
                                            android:paddingStart="8dp"
                                            android:gravity="center"
                                            style="@style/TextStyles.Label.Small.w1"
                                            />

                                    </LinearLayout>

                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:id="@+id/divider1"
                                android:background="#e4e4e4"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="12dp"
                                app:layout_constraintTop_toBottomOf="@+id/barrier2"/>

                            <LinearLayout
                                android:orientation="vertical"
                                android:id="@+id/lytDateTimeView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                app:layout_constraintTop_toBottomOf="@+id/divider1">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:textColor="#222222"
                                        android:id="@+id/txtStartDate"
                                        android:text="12/02/2025"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        style="@style/TextStyles.Label.Base.w3"/>
                                    <TextView
                                        android:textColor="#222222"
                                        android:id="@+id/txtEndDate"
                                        android:text="16/02/2025"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        style="@style/TextStyles.Label.Base.w3"/>
                                    <TextView
                                        android:textColor="#717171"
                                        android:id="@+id/txtStartTime"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="1dp"
                                        android:text="PM"
                                        app:layout_constraintStart_toStartOf="@+id/txtStartDate"
                                        app:layout_constraintTop_toBottomOf="@+id/txtStartDate"
                                        style="@style/TextStyles.Label.Small.w1"/>
                                    <TextView
                                        android:textColor="#717171"
                                        android:id="@+id/txtEndTime"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="1dp"
                                        android:text="AM"
                                        app:layout_constraintEnd_toEndOf="@+id/txtEndDate"
                                        app:layout_constraintTop_toBottomOf="@+id/txtEndDate"
                                        style="@style/TextStyles.Label.Small.w1"/>
                                    <TextView
                                        android:textColor="#717171"
                                        android:id="@+id/txtNight"
                                        android:text="2 nights"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:layout_marginEnd="8dp"
                                        app:layout_constraintBottom_toBottomOf="@+id/txtStartDate"
                                        app:layout_constraintEnd_toStartOf="@+id/vDashedLine2"
                                        app:layout_constraintStart_toEndOf="@+id/vDashedLine1"
                                        app:layout_constraintTop_toTopOf="@+id/txtStartDate"
                                        style="@style/TextStyles.Label.Small.w1"/>
                                    <View
                                        android:id="@+id/vDashedLine1"
                                        android:background="@drawable/htl_dashed_line2"
                                        android:layout_width="0dp"
                                        android:layout_height="2dp"
                                        android:layout_marginStart="8dp"
                                        app:layout_constraintBottom_toBottomOf="@+id/txtStartDate"
                                        app:layout_constraintEnd_toStartOf="@+id/txtNight"
                                        app:layout_constraintStart_toEndOf="@+id/txtStartDate"
                                        app:layout_constraintTop_toTopOf="@+id/txtStartDate"/>
                                    <View
                                        android:id="@+id/vDashedLine2"
                                        android:background="@drawable/htl_dashed_line2"
                                        android:layout_width="0dp"
                                        android:layout_height="2dp"
                                        android:layout_marginEnd="8dp"
                                        app:layout_constraintBottom_toBottomOf="@+id/txtEndDate"
                                        app:layout_constraintEnd_toStartOf="@+id/txtEndDate"
                                        app:layout_constraintStart_toEndOf="@+id/txtNight"
                                        app:layout_constraintTop_toTopOf="@+id/txtEndDate"/>
                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </LinearLayout>

                            <View
                                android:id="@+id/divider2"
                                android:background="#e4e4e4"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="12dp"
                                app:layout_constraintTop_toBottomOf="@+id/lytDateTimeView"/>

                            <LinearLayout
                                android:orientation="vertical"
                                android:id="@+id/lytRoom"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                app:layout_constraintTop_toBottomOf="@+id/divider2">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <!-- Room Image -->
                                    <androidx.cardview.widget.CardView
                                        android:layout_width="@dimen/htl_property_card_image_width1"
                                        android:layout_height="@dimen/htl_property_card_image_width1"
                                        android:layout_marginEnd="16dp"
                                        app:cardCornerRadius="@dimen/radius_small"
                                        app:cardBackgroundColor="@android:color/white">

                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                            <androidx.appcompat.widget.AppCompatImageView
                                                android:id="@+id/imageRoom"
                                                android:layout_width="@dimen/htl_property_card_image_height"
                                                android:layout_height="@dimen/htl_property_card_image_height"
                                                android:layout_marginBottom="20dp"
                                                android:scaleType="centerCrop"
                                                android:src="@drawable/bbbb"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toTopOf="parent"/>
                                        </androidx.constraintlayout.widget.ConstraintLayout>
                                    </androidx.cardview.widget.CardView>

                                    <LinearLayout
                                        android:translationY="0dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:gravity="center_vertical">

                                            <TextView
                                                android:textColor="#222222"
                                                android:text="@string/amenities"
                                                android:id="@+id/txtTotalOccupancy"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                style="@style/TextStyles.Label.Base.w3"/>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:gravity="center_vertical"
                                            android:paddingBottom="8dp">

                                            <TextView
                                                android:text="@string/check_now"
                                                android:id="@+id/txtTitle"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
                                                app:layout_constraintHorizontal_bias="0"
                                                app:layout_constraintStart_toEndOf="@+id/imgView"
                                                style="@style/TextStyles.Label.Base.w1"/>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:visibility="gone"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="horizontal"
                                            android:gravity="center_vertical"
                                            android:paddingBottom="8dp">

                                            <WebView
                                                android:id="@+id/mlv_goods_detail_description"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                tools2:ignore="WebViewLayout" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="horizontal"
                                            android:gravity="center_vertical"
                                            android:paddingBottom="8dp">

                                            <TextView
                                                android:text="View Room Details"
                                                android:textColor="#222222"
                                                android:id="@+id/txtDescription"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                style="@style/TextStyles.Label.Small.w1"/>
                                        </LinearLayout>

                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>



                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:background="@drawable/white_round_rect_8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:textColor="#222222"
                                    android:id="@+id/tvRatingo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="15dp"
                                    android:maxLines="3"
                                    android:text="@string/amenities"
                                    style="@style/TextStyles.Label.Medium.w3"/>

                                <View
                                    android:layout_below="@+id/tvRatingo"
                                    android:id="@+id/separatorSection"
                                    android:background="#eff3f8"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"/>

                                <LinearLayout
                                    android:padding="13dp"
                                    android:orientation="vertical"
                                    android:layout_below="@+id/separatorSection"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">


                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/recyclerPolicies"
                                        android:paddingBottom="14dp"
                                        android:scrollbars="none"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="8dp"
                                        android:nestedScrollingEnabled="false"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/tvRating"/>

                                    <TextView
                                        android:textColor="#2276e3"
                                        android:id="@+id/view_all_amenities"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="8dp"
                                        android:text="View All Amenities"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/rvAmenities"
                                        style="@style/TextStyles.Label.Base.w3"/>

                                </LinearLayout>

                            </RelativeLayout>







                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <include
                            android:id="@+id/uuu"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            layout="@layout/view_h_review_traveller_detail" />

                    </LinearLayout>




                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <!--fin hotel infos-->

        </androidx.core.widget.NestedScrollView>
        <!--fin contenu-->

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/detailFooterView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coordinateLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/lytParentFooter"
                android:tag="layout/lyt_h_detail_footer_0"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/lytInStock"
                    android:background="@drawable/white_rect_shadow"
                    android:paddingLeft="10dp"
                    android:paddingRight="6dp"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="7dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/detail_price_offer_lyt"
                        android:visibility="visible"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:foreground="?attr/selectableItemBackground"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/detail_select_room_btn"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:id="@+id/unStrikedPrice"
                            android:text="500000 BIF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            app:layout_constraintStart_toStartOf="parent"
                            style="@style/TextStyles.Label.Base.w3"
                            tools:ignore="MissingConstraints" />
                        <TextView
                            android:textColor="#717171"
                            android:id="@+id/txtPerNight"
                            android:text="per night"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="5dp"
                            app:layout_constraintBottom_toBottomOf="@+id/unStrikedPrice"
                            app:layout_constraintLeft_toRightOf="@+id/unStrikedPrice"
                            app:layout_constraintTop_toTopOf="@+id/unStrikedPrice"
                            style="@style/TextStyles.Label.Base.w1"/>
                        <TextView
                            android:textColor="#717171"
                            android:id="@+id/tvTnc"
                            android:visibility="visible"
                            android:text="bhyuuu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0"
                            app:layout_constraintStart_toStartOf="@+id/unStrikedPrice"
                            app:layout_constraintTop_toBottomOf="@+id/unStrikedPrice"
                            style="@style/TextStyles.Label.Small.w1"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>



                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/detail_select_room_btn"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:foreground="?attr/selectableItemBackground"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <LinearLayout
                            android:id="@+id/lyt_cta"
                            android:background="@drawable/go_orange_selector_8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="15dp"
                            android:paddingVertical="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                            <TextView
                                android:text="Select Room"
                                android:textColor="@color/white"
                                android:id="@+id/select_room_btn_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/TextStyles.Label.Medium.w3"/>
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

