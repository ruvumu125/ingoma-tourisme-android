<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.androidly.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:tag="layout/view_h_detail_info_photos_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/photos_rv"
        android:layout_width="match_parent"
        android:layout_height="229dp"
        android:paddingHorizontal="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:sliderAnimationDuration="600"
        app:sliderAutoCycleDirection="back_and_forth"
        app:sliderAutoCycleEnabled="true"
        app:sliderIndicatorAnimationDuration="600"
        app:sliderIndicatorGravity="center_horizontal|bottom"
        app:sliderIndicatorMargin="15dp"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorPadding="3dp"
        app:sliderIndicatorRadius="2dp"
        app:sliderIndicatorSelectedColor="#5A5A5A"
        app:sliderIndicatorUnselectedColor="#FFF"
        app:sliderScrollTimeInSec="1"
        app:sliderStartAutoCycle="true"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lytPhotosTagsParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/photos_rv"
        app:layout_constraintStart_toStartOf="@+id/photos_rv">
        <androidx.appcompat.widget.AppCompatTextView
            android:textColor="@color/white"
            android:gravity="center"
            android:text="Property Photos (78)"
            android:id="@+id/hotels_photo_tag"
            android:background="@drawable/black_30_rounded_38dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            app:layout_constraintBottom_toBottomOf="0"
            app:layout_constraintEnd_toStartOf="@+id/guests_photo_tag"
            app:layout_constraintHorizontal_chainStyle="0"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/TextStyles.Label.Small.w3"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:textColor="@color/white"
            android:gravity="center"
            android:text="Guest Photos (100)"
            android:id="@+id/guests_photo_tag"
            android:background="@drawable/black_30_rounded_38dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_marginStart="4dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="0"
            app:layout_constraintStart_toEndOf="@+id/hotels_photo_tag"
            style="@style/TextStyles.Label.Small.w3"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
