<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.androidly.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
    android:tag="layout/view_h_review_traveller_detail_0"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp">
    <TextView
        android:textColor="#222222"
        android:id="@+id/tvCardHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Traveller Details"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextStyles.Label.Medium.w3"/>
    <View
        android:id="@+id/divider1"
        android:background="#ebebeb"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCardHeading"/>
    <TextView
        android:textColor="#222222"
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Name"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider1"
        style="@style/TextStyles.Label.Base.w3"/>
    <RadioGroup
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:id="@+id/radioTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/name">
        <RadioButton
            android:textColor="#222222"
            android:layout_gravity="center"
            android:id="@+id/mr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/review_title_mr"
            android:scaleX="0.75"
            android:scaleY="0.75"
            android:textAlignment="center"
            android:buttonTint="@color/review_widget_color"
            style="@style/TextStyles.Label.Large.w3"/>
        <RadioButton
            android:textColor="#222222"
            android:layout_gravity="center"
            android:id="@+id/mrs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/review_title_mrs"
            android:scaleX="0.75"
            android:scaleY="0.75"
            android:textAlignment="center"
            android:buttonTint="@color/review_widget_color"
            style="@style/TextStyles.Label.Large.w3"/>
        <RadioButton
            android:textColor="#222222"
            android:layout_gravity="center"
            android:id="@+id/ms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/review_title_ms"
            android:scaleX="0.75"
            android:scaleY="0.75"
            android:textAlignment="center"
            android:buttonTint="@color/review_widget_color"
            style="@style/TextStyles.Label.Large.w3"/>
    </RadioGroup>
    <TextView
        android:textColor="#a21517"
        android:id="@+id/titleError"
        android:paddingBottom="12dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintLeft_toLeftOf="@+id/radioTitle"
        app:layout_constraintTop_toBottomOf="@+id/radioTitle"
        style="@style/TextStyles.Label.Small.w1"/>
    <com.solver.ingomatourism.utils.NoPaddingTextInputLayout
        android:theme="@style/TextInputLayoutAppearance"
        android:textColorHint="@color/box_text_color_hint"
        android:id="@+id/inputFirstName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        app:boxStrokeColor="@color/box_stroke_color_list"
        app:boxStrokeErrorColor="#a21517"
        app:errorEnabled="true"
        app:errorIconDrawable="@null"
        app:errorTextColor="#a21517"
        app:hintTextColor="#2276e3"
        app:layout_constraintLeft_toLeftOf="0"
        app:layout_constraintRight_toLeftOf="@+id/inputLastName"
        app:layout_constraintTop_toBottomOf="@+id/titleError"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:textColor="#222222"
            android:textColorHint="#717171"
            android:ellipsize="end"
            android:id="@+id/edtFirstName"
            android:tag="@string/regular"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:maxLines="1"
            android:singleLine="true"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:imeOptions="actionNext"
            android:colorControlActivated="#717171"
            style="@style/TextStyles.Label.Base.w3"/>
    </com.solver.ingomatourism.utils.NoPaddingTextInputLayout>
    <com.solver.ingomatourism.utils.NoPaddingTextInputLayout
        android:theme="@style/TextInputLayoutAppearance"
        android:textColorHint="@color/box_text_color_hint"
        android:id="@+id/inputLastName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Surname"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:boxStrokeColor="@color/box_stroke_color_list"
        app:boxStrokeErrorColor="#a21517"
        app:errorEnabled="true"
        app:errorIconDrawable="@null"
        app:errorTextColor="#a21517"
        app:hintTextColor="#2276e3"
        app:layout_constraintLeft_toRightOf="@+id/inputFirstName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleError"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:textColor="#222222"
            android:textColorHint="#717171"
            android:ellipsize="end"
            android:id="@+id/edtLastName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:maxLines="1"
            android:singleLine="true"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:inputType="textCapWords"
            style="@style/TextStyles.Label.Base.w3"/>
    </com.solver.ingomatourism.utils.NoPaddingTextInputLayout>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="3"
        app:constraint_referenced_ids="inputLastName,inputFirstName"/>
    <View
        android:id="@+id/divider2"
        android:background="#ebebeb"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barrier"/>
    <TextView
        android:textColor="#222222"
        android:id="@+id/phoneNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Phone Number"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="0"
        app:layout_constraintTop_toBottomOf="@+id/divider2"
        style="@style/TextStyles.Label.Base.w3"/>
    <com.solver.ingomatourism.utils.NoPaddingTextInputLayout
        android:theme="@style/TextInputLayoutAppearance"
        android:textColorHint="@color/box_text_color_hint"
        android:id="@+id/phoneCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        app:boxStrokeColor="@color/box_stroke_color_list"
        app:errorEnabled="true"
        app:hintTextColor="#2276e3"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/inputPhoneNo"
        app:layout_constraintTop_toBottomOf="@+id/phoneNo"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:textColor="#222222"
            android:textColorHint="#717171"
            android:id="@+id/etPhoneCode"
            android:focusable="false"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="+91"
            android:digits="0987654321"
            android:drawableRight="@drawable/ic_spinner_downarrow"
            android:drawablePadding="8dp"
            android:imeOptions="actionNext"
            app:boxStrokeErrorColor="#a21517"
            app:errorTextColor="#a21517"
            style="@style/TextStyles.Label.Base.w3"/>
    </com.solver.ingomatourism.utils.NoPaddingTextInputLayout>
    <com.solver.ingomatourism.utils.NoPaddingTextInputLayout
        android:theme="@style/TextInputLayoutAppearance"
        android:textColorHint="@color/box_text_color_hint"
        android:id="@+id/inputPhoneNo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Phone Number"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:boxStrokeColor="@color/box_stroke_color_list"
        app:boxStrokeErrorColor="#a21517"
        app:errorEnabled="true"
        app:errorIconDrawable="@null"
        app:errorTextColor="#a21517"
        app:hintTextColor="#2276e3"
        app:layout_constraintLeft_toRightOf="@+id/phoneCode"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneNo"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:textColor="#222222"
            android:textColorHint="#717171"
            android:ellipsize="end"
            android:id="@+id/edtPhoneNo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:singleLine="true"
            android:maxLength="20"
            android:digits="0987654321"
            android:inputType="textCapWords"
            style="@style/TextStyles.Label.Base.w3"/>
    </com.solver.ingomatourism.utils.NoPaddingTextInputLayout>
    <View
        android:id="@+id/divider3"
        android:background="#ebebeb"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputPhoneNo"/>
    <TextView
        android:textColor="#222222"
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Email Address"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider3"
        style="@style/TextStyles.Label.Base.w3"/>
    <com.solver.ingomatourism.utils.NoPaddingTextInputLayout
        android:theme="@style/TextInputLayoutAppearance"
        android:textColorHint="@color/box_text_color_hint"
        android:id="@+id/inputEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Enter email address"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:boxStrokeColor="@color/box_stroke_color_list"
        app:boxStrokeErrorColor="#a21517"
        app:errorEnabled="true"
        app:errorIconDrawable="@null"
        app:errorTextColor="#a21517"
        app:hintTextColor="#2276e3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:textColor="#222222"
            android:textColorHint="#717171"
            android:ellipsize="end"
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textCapWords"
            android:imeOptions="actionDone"
            style="@style/TextStyles.Label.Base.w3"/>
    </com.solver.ingomatourism.utils.NoPaddingTextInputLayout>
    <View
        android:id="@+id/divider4"
        android:background="#ebebeb"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputEmail"/>
    <TextView
        android:textColor="#222222"
        android:id="@+id/otherGuest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Other Guests"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider4"
        style="@style/TextStyles.Label.Base.w3"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/otherGuestList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otherGuest"/>
    <View
        android:id="@+id/divider5"
        android:background="#ebebeb"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otherGuestList"/>
    <TextView
        android:textColor="#2274e0"
        android:id="@+id/addNameText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Add Names of Other Guests"
        android:layout_marginStart="16dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/useFullForVisa"
        app:layout_constraintTop_toBottomOf="@+id/divider5"
        style="@style/TextStyles.Label.Small.w3"/>
    <TextView
        android:textColor="#717171"
        android:gravity="right"
        android:id="@+id/useFullForVisa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Useful for Visa purposes"
        android:layout_marginEnd="16dp"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider5"
        style="@style/TextStyles.Label.Small.w3"/>
</androidx.constraintlayout.widget.ConstraintLayout>
