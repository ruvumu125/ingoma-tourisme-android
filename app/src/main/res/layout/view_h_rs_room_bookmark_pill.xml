<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:tools="http://schemas.androidly.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:layout_gravity="bottom|center_vertical|center_horizontal|center"
    android:id="@+id/lyt_BookmarkPill"
    android:tag="layout/view_h_rs_room_bookmark_pill_0"
    android:visibility="gone"
    android:layout_width="@dimen/rs_room_type_pill_weight"
    android:layout_height="@dimen/rs_room_type_pill_height"
    android:layout_marginBottom="@dimen/rs_room_type_pill_bottom_margin"
    app:cardCornerRadius="@dimen/rs_room_type_pill_radius"
    app:cardElevation="4dp">
    <LinearLayout android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/bg_blue_gradient_room_type"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center" android:id="@+id/txtRoomTypes" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5 Room Types" android:layout_marginStart="10dp" style="@style/TextStyles.Label.Small.w3"/>
        <ImageView android:layout_gravity="center" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginStart="7dp" android:layout_marginEnd="4dp" app:srcCompat="@drawable/htl_ic_arrow_up_white"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
