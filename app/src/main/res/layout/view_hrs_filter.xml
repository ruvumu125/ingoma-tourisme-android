<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:tools="http://schemas.androidly.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:id="@+id/lytFilter"
    android:tag="layout/view_hrs_filter_0"
    android:background="?attr/toolbarBG"
    android:paddingRight="8dp"
    android:scrollbars="none"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    app:layout_collapseMode="none"
    app:layout_scrollFlags="enterAlways">
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/filterTextColor"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/tvFilter"
            android:paddingBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter By"
            android:includeFontPadding="false"
            android:layout_centerVertical="true"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            style="@style/TextStyles.Label.Small.w1"/>
        <androidx.recyclerview.widget.RecyclerView
            android:orientation="horizontal"
            android:id="@+id/rvRoomSelectionFilter"
            android:paddingRight="8dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvFilter"
            android:nestedScrollingEnabled="false"/>
    </RelativeLayout>
</HorizontalScrollView>
