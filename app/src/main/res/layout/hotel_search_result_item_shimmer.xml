<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:background="@drawable/white_bg"
    android:paddingBottom="@dimen/padding_16"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:background="@drawable/ic_hotel_placeholder"
        android:layout_width="0dp"
        android:layout_height="185dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toTopOf="0"/>
    <me.relex.circleindicator.CircleIndicator3
        android:id="@+id/indicator"
        android:background="@drawable/card_text_view_background"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_marginStart="117dp"
        android:layout_marginEnd="117dp"
        android:backgroundTint="@color/colorLightGray"
        app:ci_animator="@animator/animate_scale"
        app:ci_drawable="@drawable/ic_non_selected_indicator"
        app:ci_drawable_unselected="@drawable/ic_non_selected_indicator"
        app:layout_constraintBottom_toBottomOf="@+id/view_pager"
        app:layout_constraintEnd_toEndOf="@+id/view_pager"
        app:layout_constraintStart_toStartOf="@+id/view_pager"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="@dimen/padding_16"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="@dimen/padding_16"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textColor="@color/colorTransparent"
        android:id="@+id/tv_type"
        android:background="@drawable/card_text_view_background"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Resort" android:alpha="0.8"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/colorGray"
        app:fontFamily="@font/avenir_bold"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/view_pager"
        app:layout_constraintTop_toTopOf="@+id/view_pager"
        style="@style/h5AvenirMedium"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/linearLayoutCompat2"
        android:background="@drawable/card_text_view_background"
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:alpha="0.8"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/colorGray"
        app:layout_constraintEnd_toEndOf="@+id/view_pager"
        app:layout_constraintTop_toTopOf="@+id/view_pager">
        <androidx.appcompat.widget.AppCompatTextView
            android:textColor="@color/colorTransparent"
            android:id="@+id/tv_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:layout_marginStart="8dp"
            app:fontFamily="@font/avenir_bold"
            style="@style/H3TextAppearance"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_star"
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star"
            android:scaleType="fitCenter"
            android:tint="@color/colorWhite"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.AppCompatTextView
        android:textColor="@color/colorTransparent"
        android:id="@+id/tv_include"
        android:background="@drawable/card_text_view_background"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Breakfast Included"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:backgroundTint="@color/colorGray"
        app:layout_constraintBottom_toBottomOf="@+id/view_pager"
        app:layout_constraintStart_toStartOf="@+id/view_pager"
        style="@style/h5AvenirMedium"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="horizontal"
        android:id="@+id/linearLayoutCompat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="4"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toBottomOf="@+id/view_pager">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.4"
            android:layout_marginEnd="5dp">
            <androidx.appcompat.widget.AppCompatTextView
                android:textColor="@color/colorTransparent"
                android:ellipsize="end"
                android:id="@+id/tv_hotel_name"
                android:background="@drawable/card_text_view_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sayeman Beach Resort"
                android:maxLines="1"
                android:backgroundTint="@color/colorGray"
                style="@style/H2BoldTextAppearance"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textColor="@color/colorTransparent"
                android:ellipsize="end"
                android:id="@+id/tv_hotel_address"
                android:background="@drawable/card_text_view_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Kolatoli, Cox’s Bazar"
                android:maxLines="2"
                android:drawablePadding="8dp"
                android:backgroundTint="@color/colorLightGray"
                style="@style/H3Avenir"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textColor="@color/colorTransparent"
                android:ellipsize="end"
                android:background="@drawable/card_text_view_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Kolatoli, Cox’s Bazar"
                android:maxLines="2"
                android:drawablePadding="8dp"
                android:backgroundTint="@color/colorLightGray"
                style="@style/H3Avenir"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.6"
            android:layout_marginStart="5dp">
            <androidx.appcompat.widget.AppCompatTextView
                android:textColor="@color/colorTransparent"
                android:ellipsize="end" android:gravity="end"
                android:layout_gravity="end"
                android:background="@drawable/card_text_view_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/starts_from"
                android:maxLines="1"
                android:backgroundTint="@color/colorGray"
                app:fontFamily="@font/avenir_semi_bold"
                style="@style/H3Avenir"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textColor="@color/colorTransparent"
                android:ellipsize="end"
                android:gravity="end"
                android:layout_gravity="end"
                android:id="@+id/tv_starting_price"
                android:background="@drawable/card_text_view_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="BDT 18,232"
                android:maxLines="1"
                android:backgroundTint="@color/colorLightGray"
                app:fontFamily="@font/avenir_semi_bold"
                style="@style/H5Avenir"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_gravity="end"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="@color/colorTransparent"
                    android:ellipsize="end"
                    android:id="@+id/tv_price"
                    android:background="@drawable/card_text_view_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18,232"
                    android:maxLines="1"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="@color/colorGray"
                    android:letterSpacing="-0.027"
                    style="@style/H2BoldTextAppearance"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/ll_facility"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat"
        app:layout_constraintVertical_bias="0">
        <androidx.appcompat.widget.AppCompatTextView
            android:textColor="@color/colorTransparent"
            android:gravity="center_vertical"
            android:background="@drawable/card_text_view_background"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Airport Shuttle"
            android:drawablePadding="7dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/colorLightGray"
            style="@style/H3Avenir"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:textColor="@color/colorTransparent"
            android:gravity="center_vertical"
            android:background="@drawable/card_text_view_background"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Airport Shuttle"
            android:drawablePadding="7dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/colorGray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/H3Avenir"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:textColor="@color/colorTransparent"
            android:gravity="center_vertical"
            android:background="@drawable/card_text_view_background"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Airport Shuttle"
            android:drawablePadding="7dp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorLightGray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/H3Avenir"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>
